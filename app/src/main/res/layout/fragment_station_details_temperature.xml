<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.grp8.weatherapp.Fragments.StationDetailsTemperatureFragment"
             android:paddingBottom="@dimen/activity_vertical_margin"
             android:paddingLeft="@dimen/activity_horizontal_margin"
             android:paddingRight="@dimen/activity_horizontal_margin"
             android:paddingTop="@dimen/activity_vertical_margin"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:id="@+id/relativeLayout2"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        >

        <TextView
            android:id="@+id/dateTextLabelFrom"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="From:"
            android:gravity="left|center_vertical"
            />

        <TextView
            android:id="@+id/dateInputFrom"
            android:layout_toRightOf="@id/dateTextLabelFrom"
            android:layout_width="110dip"
            android:layout_height="40dip"
            android:textColor="#444"
            android:textSize="18sp"
            android:text="01-01-2017"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/dateTextLabelTo"
            android:layout_width="35dip"
            android:layout_height="40dip"
            android:layout_toRightOf="@id/dateInputFrom"
            android:gravity="left|center_vertical"
            android:text="To:"
            />

        <TextView
            android:id="@+id/dateInputTo"
            android:layout_width="110dip"
            android:layout_height="40dip"
            android:layout_toRightOf="@id/dateTextLabelTo"
            android:textColor="#444"
            android:textSize="18sp"
            android:text="07-01-2017"
            android:gravity="center_vertical"
            />

    </RelativeLayout>

</FrameLayout>
