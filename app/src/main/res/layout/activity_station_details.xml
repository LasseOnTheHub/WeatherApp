<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_station_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.grp8.weatherapp.Activities.StationDetailsActivity">

    <!--
        <com.jjoe64.graphview.GraphView
            android:layout_width="match_parent"
            android:layout_height="170dip"
            android:id="@+id/humidity_graph"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
        />
    -->

    <TextView
        android:text="Chose a time period to display data from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dateTextTip"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_below="@+id/dateTextTip"
        android:id="@+id/relativeLayout2"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        >

        <TextView
            android:id="@+id/dateTextLabelFrom"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="From:"
            android:gravity="left|center_vertical"
            />

        <TextView
            android:id="@+id/dateInputFrom"
            android:layout_toRightOf="@id/dateTextLabelFrom"
            android:layout_width="110dip"
            android:layout_height="40dip"
            android:textColor="#444"
            android:textSize="18sp"
            android:text="01-01-2016"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/dateTextLabelTo"
            android:layout_width="35dip"
            android:layout_height="40dip"
            android:layout_toRightOf="@id/dateInputFrom"
            android:gravity="left|center_vertical"
            android:text="To:"
            />

        <TextView
            android:id="@+id/dateInputTo"
            android:layout_width="110dip"
            android:layout_height="40dip"
            android:layout_toRightOf="@id/dateTextLabelTo"
            android:textColor="#444"
            android:textSize="18sp"
            android:text="07-01-2016"
            android:gravity="center_vertical"
            />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/relativeLayout2"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="20dip"
            >

            <TextView
                android:id="@+id/graphHeaderTemperature"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:gravity="left|center_vertical"
                android:textSize="18sp"
                android:text="Temperature (Celcius)"
                />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graphTemperature"
                android:layout_width="match_parent"
                android:layout_height="170dip"
                android:layout_below="@id/graphHeaderTemperature"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:id="@+id/graphHeaderRain"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:layout_below="@id/graphTemperature"
                android:gravity="left|center_vertical"
                android:textSize="18sp"
                android:text="Rain (mm)"
                />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graphRain"
                android:layout_width="match_parent"
                android:layout_height="170dip"
                android:layout_below="@id/graphHeaderRain"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:id="@+id/graphHeaderHumidity"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:layout_below="@id/graphRain"
                android:gravity="left|center_vertical"
                android:textSize="18sp"
                android:text="Humidity (%)"
                />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graphHumidity"
                android:layout_width="match_parent"
                android:layout_height="170dip"
                android:layout_below="@id/graphHeaderHumidity"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
